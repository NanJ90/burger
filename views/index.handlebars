<div class="text-center">
  <img src="/assets/img/burger.jpg" alt="Sorry! Pic will come soon" width="30%" class="rounded">
</div>
<header>
  <h1 class = "display-3 text-center center-block">Eat-Da-Burger</h1>
</header>

<div class="row">

    <div id="left" class="text-center col-md-6">
      <ul class="list-unstyled">
        {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              {{this.id}}
              {{this.burger_name}}
              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit">Devour It!</button>
              </form>
            </li>
          {{/unless}}
        {{/each}}
      </ul>

  </div>

    <div id ="right" class="text-center col-md-6">
      <ul class="list-unstyled">
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              {{this.id}}
              {{this.burger_name}}

              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="false">
              </form>
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
</div>
    <div id="middle" class= "text-center">
      <form method="POST" action="/">
        <textarea type="text" name="burger_name"></textarea>
        <button type="submit">Submit!</button>
      </form>
    </div>

  <footer class="text-center">
    Eat a burger you want to eat Click the "Submit" button
  </footer>
